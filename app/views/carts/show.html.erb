<h1>我的購物車</h1>
<table>
  <thead>
    <tr><th>商品</th><td>單價</td><td>數量</td><td>小計</td></tr>
  </thead>
  <tbody>
    <% @line_items.each do |line_item| %>
    <tr>
      <td><%= link_to line_item.product.name, line_item.product %></td>
      <td><%= line_item.unit_price %></td>
      <td><%= line_item.quantity %></td>
      <td><%= line_item.price %></td>
    </tr>
    <% end %>
  </tbody>
</table>